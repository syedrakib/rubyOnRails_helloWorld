<h1>All articles - <%= @articles.count %> total</h1>

<%= link_to 'New article', new_article_path %>

<table border="0" cellpadding="10" cellspacing="10">
  <tr>
    <th>Id</th>
    <th>Title</th>
    <th>Text</th>
    <th>Has comments</th>
    <th colspan="3">&nbsp;</th>
  </tr>

  <% @articles.each do |article| %>
    <tr>
      <td><%= article.id %></td>
      <td><%= article.title %></td>
      <td><%= article.text %></td>
      <td align="center"><%= article.comments.count %></td>
      <td><%= link_to 'Show', article_path(article) %></td>
      <td><%= link_to 'Edit', edit_article_path(article) %></td>
      <td><%= link_to 'Delete', article_path(article), method: :delete, data: {
        confirm: "Are you sure you want to delete article no. #{article.id}?"
      } %></td>
    </tr>
  <% end %>
</table>
