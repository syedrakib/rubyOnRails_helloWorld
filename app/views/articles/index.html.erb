<h1>All articles</h1>

<%= link_to 'New article', new_article_path %>

<table border="0" cellpadding="10" cellspacing="10">
  <tr>
    <th>Id</th>
    <th>Title</th>
    <th>Text</th>
    <th>&nbsp;</th>
  </tr>

  <% @articles.each do |article| %>
    <tr>
      <td><%= article.id %></td>
      <td><%= article.title %></td>
      <td><%= article.text %></td>
      <td><%= link_to 'Show', article_path(article) %></td>
    </tr>
  <% end %>
</table>
